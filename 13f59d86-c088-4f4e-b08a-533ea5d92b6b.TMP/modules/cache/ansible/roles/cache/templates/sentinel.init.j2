#!/bin/sh
#
# Simple Redis Sentinel init.d script conceived to work on Linux systems
# as it does use of the /proc filesystem.

### BEGIN INIT INFO
# Provides:     redis-sentinel{{ item.port }}
# Default-Start:        2 3 4 5
# Default-Stop:         0 1 6
# Short-Description:    Redis Sentinel
# Description:          Redis Sentinel monitors Redis instances. See https://redis.io
### END INIT INFO

SENTINELPORT={{ item.port }}
EXEC=/usr/local/bin/redis-sentinel
CLIEXEC=/usr/local/bin/redis-cli

PIDFILE=/var/run/redis/sentinel-{{ item.port }}.pid
CONF="{{ redis_sentinel_config_dir | default('/etc/redis-sentinel') }}/{{ item.port }}.conf"

case "$1" in
    start)
        if [ -f $PIDFILE ]
        then
                echo "$PIDFILE exists, process is already running or crashed"
        else
                echo "Starting Redis Sentinel..."
                $EXEC $CONF
        fi
        ;;
    stop)
        if [ ! -f $PIDFILE ]
        then
                echo "$PIDFILE does not exist, process is not running"
        else
                PID=$(cat $PIDFILE)
                echo "Stopping ..."
                $CLIEXEC -p $SENTINELPORT shutdown
                while [ -x /proc/${PID} ]
                do
                    echo "Waiting for Redis Sentinel to shutdown ..."
                    sleep 1
                done
                echo "Redis Sentinel stopped"
        fi
        ;;
    status)
        if [ ! -f $PIDFILE ]
        then
                echo "Redis Sentinel is not running"
                exit 1
        fi
        PID=$(cat $PIDFILE)
        if [ -x /proc/${PID} ]
        then
                echo "Redis Sentinel is running"
                exit 0
        else
                echo "Redis Sentinel is not running"
                exit 1
        fi
        ;;
    restart)
        $0 stop
        $0 start
        ;;
    *)
        echo "Please use start, stop, restart or status as first argument"
        ;;
esac