[Unit]
Description=Redis Sentinel %i
After=network.target

[Service]
ExecStart=/usr/local/bin/redis-sentinel {{ redis_sentinel_config_dir | default('/etc/redis-sentinel') }}/%i.conf
ExecStop=/usr/local/bin/redis-cli -p %i shutdown
User={{ redis_user | default('redis') }}
Group={{ redis_group | default('redis') }}
RuntimeDirectory=redis
RuntimeDirectoryMode=0755
LimitNOFILE=65536

[Install]
WantedBy=multi-user.target